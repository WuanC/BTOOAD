@model IEnumerable<OOAD.Models.User>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Đăng ký</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalenderID)
            </th>
            <th></th>
        </tr>
    </thead>
